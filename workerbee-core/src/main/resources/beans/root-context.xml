<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!-- annotaion config -->
    <context:annotation-config/>

    <!-- Property Placeholder Configurer -->
    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:/default.properties" />
    </bean>

    <!-- Message Source -->
    <bean id="messageSource"
          class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>classpath:/messages/security</value><!-- overwrite spring security messages -->
            </list>
        </property>
    </bean>

    <!-- Component scan -->
    <context:component-scan base-package="com.nexr.workerbee.vaadin" />

    <import resource="security-context.xml"/>
    <import resource="db-context.xml"/>

    <!-- execute after all beans initialized. -->
    <bean id="allBeansInitializedPostProcessor" class="com.nexr.workerbee.event.AllBeansInitializedPostProcessor" />
</beans>